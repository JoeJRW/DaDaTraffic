<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5E1A5"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Activity.DriverMainActivity">


    <!--主菜单布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <!--滑动条布局-->

        <LinearLayout
            android:id="@+id/route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btnLayout1"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginStart="2sp"
                android:layout_marginLeft="2sp"
                android:layout_marginTop="2sp"
                android:layout_marginEnd="2sp"
                android:layout_marginRight="2sp"
                android:layout_marginBottom="2sp"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/btn_startAccept_driver"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_gravity="bottom"
                    android:background="#FFB300"
                    android:gravity="center"
                    android:text="开始接单"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLayout2"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_weight="1"
                    android:background="#B2DFDB"
                    android:gravity="center"
                    android:text="等待订单中……"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#7E57C2" />

                <Button
                    android:id="@+id/btn_cancelAccept_driver"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:background="#FFB300"
                    android:text="取消接单"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLayout3"
                android:layout_width="match_parent"
                android:layout_height="218dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="317dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#B2DFDB"
                        android:gravity="center"
                        android:text="订单详情"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#000000" />

                    <ImageButton
                        android:id="@+id/callPassenger1"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:background="#FFB300"
                        android:contentDescription="@null"
                        app:srcCompat="@android:drawable/sym_action_call" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#E0F2F1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="213dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="出发地点："
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/setOffPlace_text1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#E0F2F1"
                        android:gravity="center|start"
                        android:textColor="#000000"
                        tools:text=" " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#E0F2F1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="215dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="目的地点："
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/destination_text1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#E0F2F1"
                        android:gravity="center|start"
                        android:textColor="#000000" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_getPassenger_driver"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFB300"
                    android:text="确认乘客上车"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLayout4"
                android:layout_width="match_parent"
                android:layout_height="218dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="629dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#B2DFDB"
                        android:gravity="center"
                        android:text="订单详情"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#000000" />

                    <ImageButton
                        android:id="@+id/callPassenger2"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:background="#FFB300"
                        android:contentDescription="@null"
                        app:srcCompat="@android:drawable/sym_action_call" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="213dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#E0F2F1"
                        android:gravity="center"
                        android:text="出发地点："
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/setOffPlace_text2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#E0F2F1"
                        android:gravity="center|start"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="213dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#E0F2F1"
                        android:gravity="center"
                        android:text="目的地点："
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/destination_text2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#E0F2F1"
                        android:gravity="center|start"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#000000" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_confirmReach_driver"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFB300"
                    android:text="确认到达目的地"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>