<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MarketOrderDetailActivity">
    <LinearLayout
        android:id="@+id/moLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <ListView
        android:id="@+id/marketOrderLv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"/>

        <LinearLayout
            android:id="@+id/mofunc"
            android:layout_width="match_parent"
            android:layout_height="93sp"
            android:layout_marginTop="2dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/moLinearLayout">
            <TextView
                android:id="@+id/MarketOrderCreateTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="创建时间：xx"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/MarketOrderPriceinAll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="合计:0积分"
                android:textColor="#000000"
                android:textSize="20sp" />


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

