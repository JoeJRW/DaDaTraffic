<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:parentActivityName = ".WalletActivity"
    tools:context=".Activity.WalletActivity">



    <ImageView
        android:id="@+id/Walletbkg"
        android:layout_width="407dp"
        android:layout_height="257dp"

        android:layout_marginBottom="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_bkg"
        tools:visibility="visible" />


    <RelativeLayout
        android:id="@+id/money_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="500dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:paddingLeft="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Tmoney"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginTop="100dp"
            android:text="余额："
            android:textSize="30sp" />

        <TextView
            android:id="@+id/money"
            android:layout_width="324dp"
            android:layout_height="34dp"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:text="00.00元"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/score_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="400dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/score"
            android:layout_width="324dp"
            android:layout_height="40dp"
            android:layout_marginBottom="210dp"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:text="0分"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Tscore"
            android:layout_width="65dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="240dp"
            android:layout_marginTop="200dp"
            android:text="积分："
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/Text2"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="295dp"
        android:layout_marginRight="295dp"
        android:layout_marginBottom="288dp"
        android:text="支付方式"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cardBtn"
        android:layout_width="380dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/icon_card"
        android:text="银行卡                                                             未绑定"
        app:layout_constraintBottom_toTopOf="@+id/zfbBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text2" />


    <Button
        android:id="@+id/vxBtn"
        android:layout_width="380dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="127dp"
        android:background="#FDFDFD"
        android:drawableLeft="@drawable/icon_vx"
        android:text="微信                                                                       未绑定"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zfbBtn" />

    <Button
        android:id="@+id/zfbBtn"
        android:layout_width="380dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/icon_zfb"
        android:text="支付宝                                                                  未绑定"
        app:layout_constraintBottom_toTopOf="@+id/vxBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardBtn" />


    <Button
        android:id="@+id/ticketBtn"
        android:layout_width="380dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="21dp"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/icon_ticket"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="优惠券                                                                         0张"
        app:layout_constraintBottom_toTopOf="@+id/Text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Walletbkg" />


</androidx.constraintlayout.widget.ConstraintLayout>